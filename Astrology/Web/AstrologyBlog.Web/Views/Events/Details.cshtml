@using AstrologyBlog.Common
@model AstrologyBlog.Web.ViewModels.Events.EventViewModel
@{
    this.ViewData["Title"] = $"Детайли на {@Model.Title}";
}
<div class="about_text wow slideInRight">
    <h2>На @Model.Title</h2>
    <h2>На @Model.Date</h2>
    <h3>@Model.Name</h3>
    <h4>В @Model.Place</h4>
    <p>@Model.Description</p>
</div>
<div class="single-meta">
    <a asp-controller="Events" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Редактирай</a>
    <hr/>
    <form method="post" asp-action="Delete" id="deleteForm" asp-route-id="@Model.Id"></form>
    <button class="btn btn-danger" data-toggle="modal" data-target="#deleteModal">Изтрий</button>
</div>

<div class="modal" tabindex="-1" role="dialog" id="deleteModal">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-body">
                <p>Искаш ли да изтриеш събитието?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" onclick="deleteForm.submit()">Да</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Не</button>
            </div>
        </div>
    </div>
</div>
