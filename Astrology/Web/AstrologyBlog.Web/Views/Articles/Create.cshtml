@model AstrologyBlog.Web.ViewModels.Articles.CreateArticleInputModel
@{ 
    this.ViewData["Title"] = "Add new article";
    var categoryItems = this.Model.Categories.Select(x => new SelectListItem(x.Name, x.Id.ToString()));
}

<form method="post" class="col-md-6 offset-md-3">
    <h1>@this.ViewData["Title"]</h1>
    <div asp-validation-summary="All">
        <div class="form-group">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Description"></label>
            <textarea asp-for="Description" class="form-control" rows="5"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="ImageUrl"></label>
            <input asp-for="ImageUrl" class="form-control"></>
            <span asp-validation-for="ImageUrl" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="CategoryId"></label>
            <select asp-for="CategoryId" class="form-control" asp-items="categoryItems"></select>
            <span asp-validation-for="CategoryId" class="text-danger"></span>
        </div>
        <input type="submit" class="btn btn-primary" />
    </div>
</form>
