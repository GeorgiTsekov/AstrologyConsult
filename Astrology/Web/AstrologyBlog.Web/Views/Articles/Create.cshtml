@model AstrologyBlog.Web.ViewModels.Articles.CreateArticleInputModel
@{
    this.ViewData["Title"] = "Добави нова статия";
    var articleCategoryItems = this.Model.ArticlesCategories.Select(x => new SelectListItem(x.Name, x.Id.ToString()));
}

<script src="~/lib/tinymce/tinymce.min.js" type="text/javascript"></script>
<script type="text/javascript">
    tinymce.init({
        selector: "textarea",
        plugins: [
            "image paste table link code media"
        ]
    });
</script>

<form method="post" class="col-md-6 offset-md-3"
      enctype="multipart/form-data">
    <hr />
    <section class="main_breadcrumb">
        <div class="container-fluid">
            <div class="row">
                <div class="breadcrumb-content">
                    <h2>@this.ViewData["Title"]</h2>
                    <h2>@this.ViewData["Name"]</h2>
                </div>
            </div>
        </div>
    </section>
    <hr />
    <div asp-validation-summary="All">
        <div class="form-group">
            <label asp-for="Name">Име на статията</label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Description">Съдържание</label>
            <textarea asp-for="Description" class="form-control" rows="5"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Images">Снимки</label>
            <input asp-for="Images" class="form-control"></>
            <span asp-validation-for="Images" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="ArticlesCategoryId">Категория</label>
            <select asp-for="ArticlesCategoryId" class="form-control" asp-items="articleCategoryItems"></select>
            <span asp-validation-for="ArticlesCategoryId" class="text-danger"></span>
        </div>
        <input type="submit" class="btn wow fadeInDown animated" value="Създай статия" />
    </div>
</form>
<hr />
<hr />
