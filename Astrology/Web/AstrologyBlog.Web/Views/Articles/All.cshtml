@using AstrologyBlog.Common
@model AstrologyBlog.Web.ViewModels.Articles.IndexArticleViewModel

<div class="row row-cols-1 row-cols-md-2">
    @foreach (var article in Model.Articles)
    {
        <div class="col mb-4">
            <div class="card">
                <img src="@article.ImageUrl" class="card-img-top img-responsive" alt="...">
                <div class="card-body">
                    <h5 class="card-title">@article.Name</h5>
                    <p class="card-text">@article.ShortDescription</p>
                    <a href="#" class="btn btn-primary">Прочети цялата статия</a>
                </div>
            </div>
        </div>
    }
</div>
