@using AstrologyBlog.Common
@model AstrologyBlog.Web.ViewModels.Articles.IndexArticleViewModel
@{
    this.ViewData["Title"] = "Статии - Всичко за астрологията";
}
<h1 class="display-3">@this.ViewData["Title"]</h1>
<hr />
<div class="row row-cols-1 row-cols-md-2">
    @foreach (var article in Model.Articles)
    {
        <div class="col mb-4">
            <div class="card">
                <img src="@article.ImageUrl" class="card-img-top img-responsive" alt="...">
                <div class="card-body">
                    <h5 class="card-title">@article.Name</h5>
                    <p class="card-text">@article.ShortDescription</p>
                    <a asp-action="ById" asp-route-id="@article.Id" class="btn btn-primary">Прочети цялата статия</a>
                </div>
            </div>
        </div>
    }
</div>
<hr />
<partial name="_PagingPartial" model="@Model" />
