@using AstrologyBlog.Common
@model AstrologyBlog.Web.ViewModels.Articles.IndexArticleViewModel

<div class="row">
    @foreach (var article in Model.Articles)
    {
        <div class="col-md-6 media">
            <img src="@article.ImageUrl" width="100" class="mr-3">
            <div class="media-body">
                <h5 class="mt-0">
                    <a href="@article.Url">
                        @article.Name
                    </a>
                </h5>
            </div>
        </div>}
</div>
