@model PagingViewModel
<nav aria-label="Page navigation example">
    <ul class="pagination justify-content-center">
        <li class="page-item @if (!Model.HasPreviousPage) { <text>disabled</text> } ">
            <a class="page-link" asp-action="All" asp-route-id="1">&laquo;&laquo;</a>
        </li>
        <li class="page-item @if (!Model.HasPreviousPage) { <text>disabled</text> } ">
            <a class="page-link" asp-action="All" asp-route-id="@Model.PreviousPageNumber">&laquo;</a>
        </li>
        @if (Model.PreviousPageNumber > 0)
        {
            <li class="page-item">
                <a class="page-link" asp-action="All" asp-route-id="@Model.PreviousPageNumber">@Model.PreviousPageNumber</a>
            </li>
        }
        <li class="page-item">
            <a class="page-link" asp-action="All" asp-route-id="@Model.PageNumber">@Model.PageNumber</a>
        </li>
        @if (Model.NextPageNumber < Model.PagesCount)
        {
            <li class="page-item">
                <a class="page-link" asp-action="All" asp-route-id="@Model.NextPageNumber">@Model.NextPageNumber</a>
            </li>
        }
        <li class="page-item @if (!Model.HasNextPage) { <text>disabled</text> } ">
            <a class="page-link" asp-action="All" asp-route-id="@Model.NextPageNumber">&raquo;</a>
        </li>
        <li class="page-item @if (!Model.HasNextPage) { <text>disabled</text> } ">
            <a class="page-link" asp-action="All" asp-route-id="@Model.PagesCount">&raquo;&raquo;</a>
        </li>
    </ul>
</nav>
