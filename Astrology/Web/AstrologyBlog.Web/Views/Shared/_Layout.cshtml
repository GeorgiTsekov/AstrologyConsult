@using AstrologyBlog.Common
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@this.ViewData["Title"] - @GlobalConstants.WelcomeName</title>
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" asp-append-version="true" />
    <link href="~/css/responsive.css" rel="stylesheet" asp-append-version="true" />
    <link href="~/css/style.css" rel="stylesheet" asp-append-version="true" />
    <link href="~/css/site.min.css" rel="stylesheet" asp-append-version="true" />
</head>
<body>
    <header class="header-area">
        <div class="navbar-area">

            <div class="astrology-nav">
                <div class="container">
                    <div class="row">
                        <div class="header_menu_wrapper">
                            <nav class="navbar navbar-expand-md navbar-light">

                                <div class="collapse navbar-collapse mean-menu" style="display: block;">
                                    <ul class="navbar-nav">
                                        <li class="nav-item"><a class="navbar-brand text-dark" asp-area="" asp-controller="Home" asp-action="Index">Желание за нов живот</a></li>

                                        <li class="nav-item"><a class="navbar-brand text-dark" asp-area="" asp-controller="Articles" asp-action="All">Статии</a></li>

                                        <li class="nav-item">
                                            <a class="navbar-brand text-dark" asp-area="" asp-controller="Articles" asp-action="All">Статии</a>
                                            <ul class="dropdown-menu">
                                                <li class="nav-item"><a href="services.html" class="nav-link">Services</a></li>
                                                <li class="nav-item"><a href="full_services_page.html" class="nav-link">Services Full Page</a></li>
                                            </ul>
                                        </li>

                                        <li class="nav-item">
                                            <a class="navbar-brand text-dark" asp-area="" asp-controller="Articles" asp-action="Create">Създай статия</a>
                                        </li>

                                        <li class="nav-item"><a href="contact_us.html" class="navbar-brand text-dark">Контакти</a></li>
                                        <partial name="_LoginPartial" />
                                    </ul>
                                </div>
                            </nav>
                            <div class="clear"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- End Navbar Area -->
    </header>
    <section id="silder" class="silder_wrapper">
        <div id="home-silder" class="owl-carousel owl-theme">
            <div class="item">
                <img src="~/images/silder/32fe8e2e-9bd1-4c2e-a754-c5964d095cc7_mwu_banner2_0.jpg" alt="silder images" title="silder images">
            </div>
        </div>
    </section>
    <div class="container">
        <partial name="_CookieConsentPartial" />
        <main role="main" class="pb-3">
            @this.RenderBody()
        </main>
    </div>

    @*<footer class="border-top footer text-muted">
            <div class="container">
                &copy; @DateTime.Now.Year - @GlobalConstants.SystemName - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
            </div>
        </footer>*@
    <!-- Footer Section -->
    <hr />
    <hr />
    <footer id="footer" class="footer">
        <div class="container-fluid">
            <div class="row">
                <div class="row footer_matter">
                    <div class="col-lg-3 col-md-3 col-sm-12 col-xs-12">
                        <div class="footer_logo_wrapper">
                            <h3 class="wow fadeInDown animated">phone: +359-884-456-780</h3>
                            <h3 class="wow fadeInDown animated">Email: astro-Borislava@abv.bg</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js" asp-append-version="true"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js" asp-append-version="true"></script>
    <script src="~/lib/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.js" asp-append-version="true"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js" asp-append-version="true"></script>
    <script src="~/js/site.min.js" asp-append-version="true"></script>
    @await this.RenderSectionAsync("Scripts", required: false)

</body>
</html>
