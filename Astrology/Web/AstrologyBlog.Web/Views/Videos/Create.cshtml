@model AstrologyBlog.Web.ViewModels.Videos.CreateVideoInputModel
@{
    this.ViewData["Title"] = "Добави новo видео";
    var articleCategoryItems = this.Model.ArticlesCategories.Select(x => new SelectListItem(x.Name, x.Id.ToString()));
}

<form method="post" class="col-md-6 offset-md-3"
      enctype="multipart/form-data">
    <div asp-validation-summary="All">
        <div class="form-group">
            <label asp-for="Title">Заглавие на видеото</label>
            <input asp-for="Title" class="form-control" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Name">Име на видеото</label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Description">Съдържание</label>
            <textarea asp-for="Description" class="form-control" rows="5"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="VideoUrl">Линк към Видеото</label>
            <input asp-for="VideoUrl" class="form-control"></>
            <span asp-validation-for="VideoUrl" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="ArticlesCategoryId">Категория</label>
            <select asp-for="ArticlesCategoryId" class="form-control" asp-items="articleCategoryItems"></select>
            <span asp-validation-for="ArticlesCategoryId" class="text-danger"></span>
        </div>
        <input type="submit" class="btn wow fadeInDown animated" value="Създай статия" />
    </div>
</form>
