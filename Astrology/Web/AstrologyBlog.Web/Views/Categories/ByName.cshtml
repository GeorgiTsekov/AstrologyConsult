@model AstrologyBlog.Web.ViewModels.Categories.CategoryViewModel
@{
    this.ViewData["Title"] = @Model.Title;
    this.ViewData["Name"] = @Model.Name;
}
<div class="text-center">
    <h1 class="display-3">@this.ViewData["Title"]</h1>
    <h1 class="display-3">@this.ViewData["Name"]</h1>
</div>
<hr />
<div class="media">
    <img src="@Model.ImageUrl" class="align-self-start mr-3" alt="...">
    <div class="media-body">
        <h5 class="mt-0">@Model.Name</h5>
    </div>
</div>
<div>
    <div class="media-body">
        <h5 class="mt-3">@Model.Description</h5>
    </div>
</div>
